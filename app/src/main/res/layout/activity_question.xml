<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.QuestionActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_gravity="top|center">

        <TextView
            android:id="@+id/questionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="normal"
            android:gravity="center"
            tools:text="What country does this flag belong to?"
            />
        <ImageView
            android:id="@+id/image_flag"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/india"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/indiaflag"
            android:layout_gravity="center"
            />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginTop="15dp"
            >
            
            <ProgressBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/questionProgressBar"
                android:layout_weight="9"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="4"
                android:minHeight="50dp"
                android:indeterminate="false"
                tools:progress="2"
                />
            <TextView
                android:id="@+id/viewProgressText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="0/4"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                />

            
        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/optionOneAnswer"
            tools:text="Option 1"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:minHeight="50dp"
            android:background="@drawable/default_border_for_options"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/optionTwoAnswer"
            tools:text="Option 2"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:minHeight="50dp"
            android:background="@drawable/default_border_for_options"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/optionThreeAnswer"
            tools:text="Option 3"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:minHeight="50dp"
            android:background="@drawable/default_border_for_options"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/optionFourAnswer"
            tools:text="Option 4"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:minHeight="50dp"
            android:background="@drawable/default_border_for_options"
            />
        <Button
            android:id="@+id/checkBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/check"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:minHeight="50dp"
            android:textSize="15dp"
            />


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>